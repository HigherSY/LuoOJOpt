{
    "manifest_version": 2,
    "name": "LuoOJ Optimizer",
    "description": "Go! LuoOJ",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "clipboardRead",
        "http://luo.hustoj.com/"
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "script/blocker.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://luo.hustoj.com/*"
            ],
            "css": [
                "css/hide.css"
            ],
            "js": [
                "script/tabs.js"
            ]
        },
        {
            "matches": [
                "http://luo.hustoj.com/submitpage.php*"
            ],
            "css": [
                "css/editor.css"
            ],
            "js": [
                "script/submitpage.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "web_accessible_resources": [
        "lib/*",
        "inject/*"
    ]
}